<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.net.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns:fx="http://javafx.com/fxml"
            fx:controller="controller.ShowBooksByAuthorController"
            alignment="center" styleClass="root" spacing="10">
    
    <Label text="Authors:"/>
    <ListView fx:id="authorLv" maxHeight="50" maxWidth="250"  />
    <Button text="Display" onAction="#handleDisplay"/>
    <Label text="Books by Selected Author:" />
    <ListView fx:id="booksLv" maxHeight="100" maxWidth="250" />
    <Button text="Close" onAction="#handleClose"/>
    
    <stylesheets>
        <URL value="@style.css"/>
    </stylesheets>
</VBox>
