<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.text.Font?>
<?import java.net.URL?>
<?import javafx.scene.image.*?>

<VBox xmlns:fx="http://javafx.com/fxml"
            fx:controller="controller.AdminController"
            alignment="center"
            styleClass="root"
            spacing="10"
>
    <HBox alignment="center" spacing="20" styleClass="header">
        <ImageView>
            <image>
                <Image url="@UTS.png"/>
            </image>
        </ImageView>
        <Text text="Library System" styleClass="heading"/>
    </HBox> 
    <VBox alignment="center" spacing="20" styleClass="footer">
        <Button text="Add Patron" onAction="#handleAddPatron" />
        <Button text="Remove Patron" onAction="#handleRemovePatron"/>
        <Button text="Add Book" onAction="#handleAddBook"/>
        <Button text="Remove Book" onAction="#handleRemoveBook"/>
        <Button text="Exit Administration" onAction="#handleExitAdmin"/>
    </VBox>

    <stylesheets>
        <URL value="@style.css"/>
    </stylesheets>
</VBox>